doctype html 
html(lang="fr")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Nouveau mot de passe
        form(method='POST' action='/users/reset')
          div.form-group
            label(for='password') Mot de passe
            input.form-control(type='text' id='password' placeholder='password' name='pwd')
          div.form-group
            label(for='passworConfirmation') Confirmation
            input.form-control(type='passworConfirmation' id='passworConfirmation' placeholder='passworConfirmation' name='pwdc')
          input(type="hidden", name="token", value=#{code})  
          button.btn.btn-primary(type='submit') Modifier 