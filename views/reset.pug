doctype html 
- var url = `/users/reset/pwd?token=${code}&user=${username}`

html(lang="fr")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Nouveau mot de passe
        div
          p#error(style="display:none; color:red") les deux entrées n'ont pas la même valeur
        form(method='POST' action=url)
          div.form-group
            label(for='password') Mot de passe
            input.form-control(type='password' id='pwd' placeholder='********' name='pwd' required)
          div.form-group
            label(for='passworConfirmation') Confirmation
            input.form-control(type='password' onchange="test()" required id='pwdc' placeholder='********' name='pwdc') 
          button#sbmt.btn.btn-primary(type='submit' disabled) Modifier 

  script.
    test = () => {
       let pwd = document.getElementById('pwd').value
       let pwdc = document.getElementById('pwdc').value
  
       if(pwd !== pwdc){
         document.getElementById('error').style.display = "block"
         document.getElementById('sbmt').disabled = true
       }

       else {
         document.getElementById('error').style.display = "none"
         document.getElementById('sbmt').disabled = false
       }
    }